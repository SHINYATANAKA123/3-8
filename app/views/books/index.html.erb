<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
    
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>Show</td>
        <td>Edit</td>
        <td>Destroy</td>
        <% end %>
        </tr>
    </tbody>
</table>

<h3>New book</h3>
<!-- form_for部分 -->
<%= form_with model:@book, url:'/books', local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<br><%= f.submit 'Create Book' %></br>

<% end %>


